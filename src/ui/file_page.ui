<?xml version='1.0' encoding='UTF-8'?>
<interface>
  <template class='FilePage' parent='GtkBox'>
    <property name='orientation'>vertical</property>
    <child>
      <!-- HeaderBar -->
      <object class='AdwHeaderBar' id='header_bar'>
        <!-- Back button -->
        <child type='start'>
          <object class='GtkButton' id='back_button'>
            <property name='icon-name'>go-previous</property>
          </object>
        </child>
        <!-- Title (PinApp) -->
        <property name='title-widget'>
          <object class='AdwWindowTitle' id='title_widget'>
            <property name='title' translatable='no'>PinApp</property>
            <!-- Subtitle is file name -->
          </object>
        </property>
        <!-- Pin button -->
        <child type='end'>
          <object class='GtkButton' id='pin_button'>
            <property name='child'>
              <object class='AdwButtonContent'>
                <property name='label' translatable='yes'>Pin</property>
                <property name='icon-name'>view-pin-symbolic</property>
              </object>
            </property>
            <style>
              <class name='suggested-action'/>
            </style>
          </object>
        </child>
        <!-- File menu button -->
        <child type='end'>
          <object class='GtkMenuButton' id='file_menu_button'>
            <property name='icon-name'>view-more-symbolic</property>
            <property name='tooltip-text' translatable='yes'>File menu</property>
            <property name='popover'>file_menu_popover</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class='AdwViewStack' id='view_stack'>
        <child>
          <object class='AdwViewStackPage'>
            <property name='name'>file_view</property>
            <property name='child'>
              <object class='AdwBin' id='file_view'>
                <child>
                  <object class='GtkScrolledWindow' id='scrolled_window'>
                    <property name='vexpand'>true</property>
                    <child>
                      <object class='AdwClamp' id='main_clamp'>
                        <child>
                          <object class='GtkBox' id='main_box'>
                            <property name='orientation'>vertical</property>
                            <property name='spacing'>12</property>
                            <property name='margin-bottom'>24</property>
                            <property name='margin-top'>24</property>
                            <property name='margin-start'>12</property>
                            <property name='margin-end'>12</property>
                            <child>
                              <object class='AdwSqueezer' id='banner_squeezer'>
                                <property name='homogeneous'>false</property>
                                <property name='interpolate-size'>true</property>
                                <property name='transition-duration'>100</property>
                                <property name='transition-type'>crossfade</property>
                                <!-- Application banner (wide) -->
                                <child>
                                  <object class='GtkBox' id='banner_box_l'>
                                    <property name='width_request'>400</property>
                                    <child>
                                      <!-- App icon -->
                                      <object class='GtkImage' id='icon_l'>
                                        <property name='margin-end'>6</property>
                                        <property name='tooltip-text' translatable='yes'>Application icon</property>
                                        <property name='icon-name'>application-x-executable</property>
                                        <property name='pixel-size'>128</property>
                                        <style>
                                          <class name='icon-dropshadow' />
                                        </style>
                                      </object>
                                    </child>
                                    <!-- App title and comment -->
                                    <child>
                                      <object class='GtkListBox' id='banner_listbox_l'>
                                        <property name='valign'>center</property>
                                        <property name='hexpand'>true</property>
                                        <property name='selection-mode'>none</property>
                                        <style>
                                          <class name='app-banner-listbox' />
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <!-- Application banner (narrow) -->
                                <child>
                                  <object class='GtkBox' id='banner_box_s'>
                                    <property name='orientation'>vertical</property>
                                    <child>
                                      <!-- App icon -->
                                      <object class='GtkImage' id='icon_s'>
                                        <property name='margin-bottom'>24</property>
                                        <property name='tooltip-text' translatable='yes'>Application icon</property>
                                        <property name='icon-name'>application-x-executable</property>
                                        <property name='pixel-size'>96</property>
                                        <style>
                                          <class name='icon-dropshadow' />
                                        </style>
                                      </object>
                                    </child>
                                    <!-- App title and comment -->
                                    <child>
                                      <object class='GtkListBox' id='banner_listbox_s'>
                                        <property name='valign'>center</property>
                                        <property name='hexpand'>true</property>
                                        <property name='selection-mode'>none</property>
                                        <style>
                                          <class name='app-banner-listbox' />
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <!-- Localized values group -->
                              <object class='AdwPreferencesGroup' id='localized_group'>
                                <property name='title' translatable='yes'>Localized values</property>
                                <property name='header-suffix'>
                                  <object class='GtkButton' id='add_localized_button'>
                                    <style>
                                      <class name='flat' />
                                    </style>
                                    <child>
                                      <object class='AdwButtonContent'>
                                        <property name='label' translatable='yes'>Add</property>
                                        <property name='icon-name'>list-add</property>
                                      </object>
                                    </child>
                                  </object>
                                </property>
                                <property name='visible'>False</property>
                              </object>
                            </child>
                            <child>
                              <!-- String values group -->
                              <object class='AdwPreferencesGroup' id='strings_group'>
                                <property name='title' translatable='yes'>String Values</property>
                                <property name='header-suffix'>
                                  <object class='GtkButton' id='add_string_button'>
                                    <style>
                                      <class name='flat' />
                                    </style>
                                    <child>
                                      <object class='AdwButtonContent'>
                                        <property name='label' translatable='yes'>Add</property>
                                        <property name='icon-name'>list-add</property>
                                      </object>
                                    </child>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <!-- Bool values group -->
                              <object class='AdwPreferencesGroup' id='bools_group'>
                                <property name='title' translatable='yes'>Boolean Values</property>
                                <property name='header-suffix'>
                                  <object class='GtkButton' id='add_bool_button'>
                                    <style>
                                      <class name='flat' />
                                    </style>
                                    <child>
                                      <object class='AdwButtonContent'>
                                        <property name='label' translatable='yes'>Add</property>
                                        <property name='icon-name'>list-add</property>
                                      </object>
                                    </child>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class='AdwViewStackPage'>
            <property name='name'>error_view</property>
            <property name='child'>
              <object class='AdwStatusPage' id='error_view'>
                <property name='title' translatable='yes'>Error opening file</property>
                <property name='icon-name'>dialog-error-symbolic</property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>

  <object class='GtkPopover' id='file_menu_popover'>
    <style>
      <class name='menu'/>
    </style>
    <child>
      <object class='GtkBox'>
        <property name="orientation">1</property>
        <property name="margin-top">6</property>
        <property name="margin-bottom">6</property>
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
        <child>
          <object class="GtkModelButton" id="unpin_button">
            <property name="text" translatable="true">Remove file</property>
          </object>
        </child>
        <child>
          <object class="GtkModelButton" id="rename_button">
            <property name="text" translatable="true">Rename file</property>
          </object>
        </child>
        <child>
          <object class="GtkModelButton" id="duplicate_button">
            <property name="text" translatable="true">Duplicate file</property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>